// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema


datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

generator client {
  provider = "prisma-client-js"
}


model User {
  id       Int      @id @default(autoincrement())
  email    String   @unique
  username String?  // Optional username field
  password String
  notes    Note[]
  scores   Score[]
}

model Course {
  id       Int      @id @default(autoincrement())
  title    String
  description String
  videos   Video[]
  quizzes  Quiz[]
  scores   Score[]
}

model Video {
  id        Int    @id @default(autoincrement())
  title     String
  url       String
  courseId  Int
  course    Course @relation(fields: [courseId], references: [id])
  notes     Note[]
}

model Note {
  id        Int      @id @default(autoincrement())
  content   String
  userId    Int
  videoId   Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  user      User     @relation(fields: [userId], references: [id])
  video     Video    @relation(fields: [videoId], references: [id])
  
  shared    Boolean  @default(false)   // Whether the note is shared
  shareId   String?  @unique           // Unique shareable ID
  
  isPublic  Boolean  @default(false)
  rating    Float?
}
model Quiz {
  id        Int      @id @default(autoincrement())
  question  String
  optionA   String   // Option A
  optionB   String   // Option B
  optionC   String   // Option C
  optionD   String   // Option D
  answer    String   // Correct option (e.g. "A")
  courseId  Int
  course    Course   @relation(fields: [courseId], references: [id])
}

model Score {
  id       Int    @id @default(autoincrement())
  userId   Int
  courseId Int
  score    Int
  user     User   @relation(fields: [userId], references: [id])
  course   Course @relation(fields: [courseId], references: [id])
}